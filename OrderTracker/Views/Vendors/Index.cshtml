@{
  Layout = "_Layout";
}

@using OrderTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h5>No Vendors have been added yet!</h5>
}

@foreach (Vendor vendor in Model)
{
    <h5><a href="/vendors/@vendor.Id">@vendor.Name</a></h5>
    <li>@vendor.Description</li>
}

<p><a href='/'>Back home</a></p>